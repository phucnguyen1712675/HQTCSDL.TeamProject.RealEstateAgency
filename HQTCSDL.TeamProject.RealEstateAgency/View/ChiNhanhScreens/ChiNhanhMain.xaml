                                            />
                                        <ComboBoxItem  
                                            Content="Nhà trống"
                                            HorizontalAlignment="Center"
                                            />
                                        <ComboBoxItem  
                                            Content="Theo nhân viên "
                                            HorizontalAlignment="Center"
                                            />
                                    </ComboBox>

                                </Grid>
                                <DataGrid Name="HouseListDataGrid"
                                    Background="White" VerticalAlignment="Center" Margin="5,20,5,20" Height="500"/>
                                <!-- TODO Binding itemsource tất cả nhà là được -->
                            </StackPanel>
                        </TabItem>

                        <!--Thêm xóa sửa nhà-->
                        <TabItem Header="Thêm/ sửa/ xóa">
                            <Grid Background="AliceBlue">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid Margin="10,10,20,10" Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
