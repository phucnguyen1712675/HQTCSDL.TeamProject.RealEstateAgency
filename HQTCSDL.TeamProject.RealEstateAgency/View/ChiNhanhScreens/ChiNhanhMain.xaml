                                            <Label Name="HouseCodeLable"
                                               Grid.Column="1"
                                               FontSize="20"
                                               Style="{StaticResource fontStyle}"/>
                                        </Grid>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="7*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" Content="số lượng xem"
                                               FontSize="15"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource fontStyle}"/>
