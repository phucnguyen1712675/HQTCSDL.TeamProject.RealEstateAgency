                                            VerticalAlignment="Center" />
                                    </Grid>
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="7*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Content="Số điện thoại"
                                               FontSize="15"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource fontStyle}"/>
