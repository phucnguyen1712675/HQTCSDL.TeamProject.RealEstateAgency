                                            Click="HouseSearchButton_Click"
                                            Style="{DynamicResource MaterialDesignToolButton}">
                                            <materialDesign:PackIcon
                                          Kind="Search"
                                          Opacity=".56" />
                                        </Button>
                                        <TextBox x:Name="HouseSearchTextBox"
                                        Grid.Column="1"
                                        Margin="8 0 0 0"
                                        FontSize="15"
