                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Content="Loại nhà yêu cầu"
                                        FontSize="15"
                                        Style="{StaticResource fontStyle}" />
                                    <StackPanel Grid.Column="1">
                                        <!--  binding các loại nhà khách yêu cầu  -->
                                        <ComboBox
                                            Name="CustomerRequestHouseTypesListComboBox"
                                            Height="40"
                                            Background="White">
                                            <!--<ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding MALOAI}"/>
                                                        <TextBlock Text=" - "/>
                                                        <TextBlock Text="{Binding TEN}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>-->
                                        </ComboBox>
                                        <Grid Margin="5,10,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>
                                            <!--  BINDING TẤT CẢ LOẠI NHÀ CHƯA CÓ TRONG LIST KHÁCH HÀNG YÊU CẦU  -->
                                            <ComboBox
                                                Name="SelectNewHouseTypeRequestCustomer"
                                                Grid.Column="0"
                                                Margin="0,0,5,0"
                                                materialDesign:HintAssist.Hint="Loại nhà mới"
                                                materialDesign:HintAssist.HintOpacity=".7"
                                                Background="White"
                                                FontFamily="Segeo ui light"
                                                FontSize="15"
                                                IsEditable="True">
                                                <!--<ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding MALOAI}"/>
                                                            <TextBlock Text=" - "/>
                                                            <TextBlock Text="{Binding TEN}"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>-->
                                            </ComboBox>
                                            <Button
                                                Name="AddNewHouseTypeRequestcustomerButton"
                                                Grid.Column="1"
                                                Margin="5,0,5,0"
                                                Content="Thêm" />
                                            <!--  TODO chỉ làm cập nhập loại nhà yêu cầu mà thôi  -->
                                            <Button
                                                Name="UpdateHouseTypeRequestcustomerButton"
                                                Grid.Column="2"
                                                Margin="5,0,5,0"
                                                Content="Sửa" />
                                        </Grid>

                                        <StackPanel
                                            Margin="5,10,0,0"
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">
                                            <Button
                                                Name="DeleteHouseTypeRequestCustomerButton"
                                                Width="100"
                                                Margin="5,0,5,0"
                                                HorizontalAlignment="Center"
                                                Content="Xóa" />
                                            <Button
                                                Name="UpdateHouseTypeRequestCustomerButton"
                                                Width="100"
                                                Margin="5,0,5,0"
                                                HorizontalAlignment="Center"
                                                Click="UpdateHouseTypeRequestCustomerButton_Click"
                                                Content="OK" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="10,20,10,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        Name="CustomerAddButon"
                                        Grid.Column="0"
                                        Width="150"
                                        HorizontalAlignment="Center"
                                        Content="Thêm" />
                                    <!--  TODO chỉ gọi hàm cập nhập yêu cầu loại nhà mới  -->
                                    <Button
                                        Name="CustomerUpdateButon"
                                        Grid.Column="1"
                                        Width="150"
                                        HorizontalAlignment="Center"
                                        Content="Sửa" />
                                    <Button
                                        Name="CustomerDeteleButon"
                                        Grid.Column="2"
                                        Width="150"
                                        HorizontalAlignment="Center"
                                        Content="Xóa" />
                                </Grid>
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </TabItem>

            <!--  Quản lý tài khoản  -->
            <TabItem VerticalAlignment="Bottom" Header="Tài khoản">
                <StackPanel>
                    <TabControl
                        Width="{Binding ConverterParameter=0.5, Converter={converter:RatioConverter}, Source={x:Static SystemParameters.PrimaryScreenWidth}}"
                        Height="{Binding ConverterParameter=0.86, Converter={converter:RatioConverter}, Source={x:Static SystemParameters.PrimaryScreenHeight}}"
                        Style="{StaticResource MaterialDesignTabControl}">
                        <!--  thông tin  -->
                        <TabItem Header="Thông tin">
                            <StackPanel Background="AliceBlue">
                                <Label
                                    HorizontalAlignment="Center"
                                    Content="Thông tin tài khoản"
                                    FontSize="20"
                                    Style="{StaticResource fontStyle}" />
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="7*" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Content="Mã"
                                        FontSize="15"
                                        Style="{StaticResource fontStyle}" />
                                    <Label
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Content="ABSDB"
                                        FontSize="20"
                                        Style="{StaticResource fontStyle}" />
                                </Grid>
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="7*" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Content="Số điện thoại"
                                        FontSize="15"
                                        Style="{StaticResource fontStyle}" />
                                    <TextBox
                                        x:Name="AgencyPhoneNumberTextBox"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        materialDesign:HintAssist.Hint="Sdt"
                                        Background="White"
                                        FontSize="15"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                </Grid>
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="7*" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Content="Số FAX"
                                        FontSize="15"
                                        Style="{StaticResource fontStyle}" />
                                    <TextBox
                                        x:Name="AgencyFaxNumberTextBox"
                                        Grid.Column="1"
                                        VerticalAlignment="Center"
                                        materialDesign:HintAssist.Hint="FAX NUMBER"
                                        Background="White"
                                        FontSize="15"
                                        Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                </Grid>
                                <StackPanel Margin="10">
                                    <Label
                                        VerticalAlignment="Center"
                                        Content="Vị trí"
                                        FontSize="15"
                                        Style="{StaticResource fontStyle}" />
                                    <Grid Margin="5,0,5,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBox
                                            x:Name="AgencyLocationStreetTextBox"
                                            Grid.Column="0"
                                            Margin="5"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Đường"
                                            Background="White"
                                            FontSize="15"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                        <TextBox
                                            x:Name="AgencyLocationDistrictTextBox"
                                            Grid.Column="1"
                                            Margin="5"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Quận"
                                            Background="White"
                                            FontSize="15"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                        <TextBox
                                            x:Name="AgencyLocationAreaTextBox"
                                            Grid.Column="2"
                                            Margin="5"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Khu vực"
                                            Background="White"
                                            FontSize="15"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                        <TextBox
                                            x:Name="AgencyLocationCityTextBox"
                                            Grid.Column="3"
                                            Margin="5"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Thành phố"
                                            Background="White"
                                            FontSize="15"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    </Grid>
                                </StackPanel>
                                <Grid Margin="10,20,10,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        Name="AgencyOKButon"
                                        Grid.Column="0"
                                        Width="150"
                                        HorizontalAlignment="Center"
                                        Content="OK" />
                                    <Button
                                        Name="AgencyCancelButon"
                                        Grid.Column="1"
                                        Width="150"
                                        HorizontalAlignment="Center"
                                        Content="Hủy" />
                                </Grid>
                            </StackPanel>
                        </TabItem>

                        <!--  mật khẩu  -->
                        <TabItem Header="Mật khẩu">
                            <StackPanel Background="AliceBlue">
                                <Label
                                    Margin="20"
                                    Content="Đổi mật khẩu"
                                    FontSize="20"
                                    Style="{StaticResource fontStyle}" />
                                <StackPanel HorizontalAlignment="Center">
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="7*" />
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Content="Mật khẩu cũ"
                                            FontSize="15"
                                            Style="{StaticResource fontStyle}" />
                                        <!--<TextBox Width="300" Margin="10,0,0,0"
                                     Name="OldPassWordTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource textBoxStyle}"/>-->
                                        <PasswordBox
                                            x:Name="OldPassWordTextBox"
                                            Grid.Column="1"
                                            Width="300"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Top"
                                            materialDesign:HintAssist.Hint="Password"
                                            Background="White"
                                            Style="{StaticResource MaterialDesignFilledPasswordBox}" />
                                    </Grid>
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="7*" />
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Content="Mật khẩu mới"
                                            FontSize="15"
                                            Style="{StaticResource fontStyle}" />
                                        <PasswordBox
                                            x:Name="NewPassWord"
                                            Grid.Column="1"
                                            Width="300"
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Top"
                                            materialDesign:HintAssist.Hint="Password"
                                            Background="White"
                                            Style="{StaticResource MaterialDesignFilledPasswordBox}" />
                                    </Grid>
                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                        <Button
                                            Name="OkChangePasswordButton"
                                            Width="70"
                                            Margin="10"
                                            Content="Ok" />
                                        <Button
                                            Name="CancelChangePasswordButton"
                                            Width="70"
                                            Margin="10"
                                            Content="Hủy" />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
