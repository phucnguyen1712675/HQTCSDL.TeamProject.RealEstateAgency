                                    <Button Name="HouseOwnerUpdateButon" Grid.Column="1" Content="Sửa" HorizontalAlignment="Center" Width="150"/>
                                    <Button Name="HouseOwnerDeteleButon" Grid.Column="2" Content="Xóa" HorizontalAlignment="Center" Width="150"/>
                                </Grid>
                            </StackPanel>
