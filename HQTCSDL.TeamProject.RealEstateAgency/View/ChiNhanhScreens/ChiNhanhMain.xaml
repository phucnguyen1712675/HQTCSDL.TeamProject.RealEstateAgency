                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Year}"/>
                                                        <TextBlock Text=" - "/>
                                                        <TextBlock Text="{Binding AuthorName}" Foreground="Blue"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>-->
                                    </ComboBox>
