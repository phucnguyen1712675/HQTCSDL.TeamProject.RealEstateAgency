                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding MACNHA}"/>
                                                            <TextBlock Text=" - "/>
                                                            <TextBlock Text="{Binding TEN}"/>
                                                            <TextBlock Text=" - "/>
                                                            <TextBlock Text="{Binding SDT}"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>-->
