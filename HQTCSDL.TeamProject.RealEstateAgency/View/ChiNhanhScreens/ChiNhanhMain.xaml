                                    <Button Name="CustomerDeteleButon" Grid.Column="2" Content="Xóa" HorizontalAlignment="Center" Width="150"/>
                                </Grid>
                            </StackPanel>
                        </TabItem>
                    </metro:MetroTabControl>
                </StackPanel>
            </TabItem>

            <!-- Quản lý tài khoản-->
            <TabItem Header="Tài khoản" VerticalAlignment="Bottom">
                <StackPanel>
                    <metro:MetroTabControl
                         Width="{Binding ConverterParameter=0.5, Converter={converter:RatioConverter}, Source={x:Static SystemParameters.PrimaryScreenWidth}}"
                        Height="{Binding ConverterParameter=0.86, Converter={converter:RatioConverter}, Source={x:Static SystemParameters.PrimaryScreenHeight}}">
                        <!-- thông tin -->
                        <TabItem Header="Thông tin">
                            <StackPanel Background="AliceBlue">
                                <Label Content="Thông tin tài khoản"
                                       FontSize="20"
                                       HorizontalAlignment="Center"
                                       Style="{StaticResource fontStyle}"/>
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Content="Mã"
                                               FontSize="15"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource fontStyle}"/>
                                    <Label Grid.Column="1" Content="ABSDB"
                                               FontSize="20"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource fontStyle}"/>
                                </Grid>
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Content="Số điện thoại"
                                               FontSize="15"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource fontStyle}"/>
                                    <TextBox x:Name="AgencyPhoneNumberTextBox"
                                            Background="White"
                                            Grid.Column="1"
                                            FontSize="15"
                                            materialDesign:HintAssist.Hint="Sdt"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                            VerticalAlignment="Center" />
                                </Grid>
                                <Grid Margin="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0" Content="Số FAX"
                                               FontSize="15"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource fontStyle}"/>
                                    <TextBox x:Name="AgencyFaxNumberTextBox"
                                            Background="White"
                                            Grid.Column="1"
                                            FontSize="15"
                                            materialDesign:HintAssist.Hint="FAX NUMBER"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                            VerticalAlignment="Center" />
                                </Grid>
                                <StackPanel Margin="10">
                                    <Label Content="Vị trí"
                                                FontSize="15"
                                                VerticalAlignment="Center"
                                                Style="{StaticResource fontStyle}"/>
                                    <Grid Margin="5,0,5,0" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox x:Name="AgencyLocationStreetTextBox"
                                                      Margin="5"
                                                      Background="White"
                                                      Grid.Column="0"
                                                      FontSize="15"
                                                      materialDesign:HintAssist.Hint="Đường"
                                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                      VerticalAlignment="Center" />
                                        <TextBox x:Name="AgencyLocationDistrictTextBox"
                                                       Margin="5"
                                                       Background="White"
                                                       Grid.Column="1"
                                                       FontSize="15"
                                                       materialDesign:HintAssist.Hint="Quận"
                                                       Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                       VerticalAlignment="Center" />
                                        <TextBox x:Name="AgencyLocationAreaTextBox"
                                                      Margin="5"
                                                      Background="White"
                                                      Grid.Column="2"
                                                      FontSize="15"
                                                      materialDesign:HintAssist.Hint="Khu vực"
                                                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                      VerticalAlignment="Center" />
                                        <TextBox x:Name="AgencyLocationCityTextBox"
                                                       Margin="5"
                                                       Background="White"
                                                       Grid.Column="3"
                                                       FontSize="15"
                                                       materialDesign:HintAssist.Hint="Thành phố"
                                                       Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                       VerticalAlignment="Center" />
                                    </Grid>
                                </StackPanel>
                                <Grid Margin="10,20,10,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Name="AgencyOKButon" Grid.Column="0" Content="OK" HorizontalAlignment="Center" Width="150"/>
                                    <Button Name="AgencyCancelButon" Grid.Column="1" Content="Hủy" HorizontalAlignment="Center" Width="150"/>
                                </Grid>
                            </StackPanel>
                        </TabItem>
                        
                        <!-- mật khẩu -->
                        <TabItem Header="Mật khẩu">
                            <StackPanel Background="AliceBlue">
                                <Label Content="Đổi mật khẩu"
                           FontSize="20"
                           Style="{StaticResource fontStyle}"
                           Margin="20"
                           />
                                <StackPanel HorizontalAlignment="Center">
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="7*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Mật khẩu cũ"
                                   Grid.Column="0"
                                   FontSize="15"
                                   VerticalAlignment="Center"
                                   Style="{StaticResource fontStyle}"/>
                                        <!--<TextBox Width="300" Margin="10,0,0,0"
                                     Name="OldPassWordTextBox"
                                     Grid.Column="1"
                                     Style="{StaticResource textBoxStyle}"/>-->
                                        <PasswordBox x:Name="OldPassWordTextBox"
                                    Width="300"
                                    Margin="10,0,0,0"
                                    Grid.Column="1"
                                    Background="White"
                                    Style="{StaticResource MaterialDesignFilledPasswordBox}"
                                    VerticalAlignment="Top"
                                    materialDesign:HintAssist.Hint="Password" />
                                    </Grid>
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="7*"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Content="Mật khẩu mới"
                                   VerticalAlignment="Center"
                                   Grid.Column="0"
                                   FontSize="15"
                                   Style="{StaticResource fontStyle}"/>
                                        <PasswordBox x:Name="NewPassWord"
                                    Width="300"
                                    Margin="10,0,0,0"
                                    Grid.Column="1"
                                    Background="White"
                                    Style="{StaticResource MaterialDesignFilledPasswordBox}"
                                    VerticalAlignment="Top"
                                    materialDesign:HintAssist.Hint="Password" />
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <Button Content="Ok" Name="OkChangePasswordButton"
                                    Margin="10" Width="70"/>
                                        <Button Content="Hủy" 
                                    Name="CancelChangePasswordButton"
                                    Margin="10" Width="70"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </TabItem>
                        
                    </metro:MetroTabControl>
                </StackPanel>
            </TabItem>
        </metro:MetroTabControl>

    </Canvas>
</metro:MetroWindow>
