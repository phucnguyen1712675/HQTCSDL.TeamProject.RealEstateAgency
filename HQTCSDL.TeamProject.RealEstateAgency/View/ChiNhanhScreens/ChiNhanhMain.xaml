<metro:MetroWindow
    x:Class="HQTCSDL.TeamProject.RealEstateAgency.View.ChiNhanhScreens.ChiNhanhMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:HQTCSDL.TeamProject.RealEstateAgency.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HQTCSDL.TeamProject.RealEstateAgency.View.ChiNhanhScreens"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    Title="CHI NHANH"
    Width="{Binding ConverterParameter=0.5, Converter={converter:RatioConverter}, Source={x:Static SystemParameters.PrimaryScreenWidth}}"
    Height="{Binding ConverterParameter=0.95, Converter={converter:RatioConverter}, Source={x:Static SystemParameters.PrimaryScreenHeight}}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <metro:MetroWindow.Resources>
        <ResourceDictionary Source="/HQTCSDL.TeamProject.RealEstateAgency;component/Resources/ResourceDictionary.xaml" />
    </metro:MetroWindow.Resources>

    <Canvas>
        <TabControl
            Width="{Binding ConverterParameter=0.5, Converter={converter:RatioConverter}, Source={x:Static SystemParameters.PrimaryScreenWidth}}"
            Height="{Binding ConverterParameter=0.9, Converter={converter:RatioConverter}, Source={x:Static SystemParameters.PrimaryScreenHeight}}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{StaticResource MaterialDesignTabControl}">

            <!--  Quản lý chủ nhả: không có gì cần thiết trong này  -->
            <TabItem Name="HouseOwner" Header="Chủ nhà">
                <Grid>
                    <TabControl
                        Width="{Binding ConverterParameter=0.5, Converter={converter:RatioConverter}, Source={x:Static SystemParameters.PrimaryScreenWidth}}"
                        Height="{Binding ConverterParameter=0.86, Converter={converter:RatioConverter}, Source={x:Static SystemParameters.PrimaryScreenHeight}}"
                        VerticalAlignment="Top"
                        Style="{StaticResource MaterialDesignTabControl}">
                        <!--  tất cả chủ nhà  -->
                        <TabItem Header="Danh sách">
                            <StackPanel Background="AliceBlue">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="7*" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Background="White">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Button Name="SearchHouseOwnerButton" Style="{DynamicResource MaterialDesignToolButton}">
                                            <materialDesign:PackIcon Kind="Search" Opacity=".56" />
                                        </Button>
                                        <TextBox
                                            Name="SearchHouseOwnerTextBox"
                                            Grid.Column="1"
                                            MinWidth="400"
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Search here"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            BorderThickness="0"
                                            FontFamily="Segeo ui light"
                                            FontSize="15" />
                                        <Button Grid.Column="2" Style="{DynamicResource MaterialDesignToolButton}">
                                            <materialDesign:PackIcon
                                                Margin="8,0,0,0"
                                                Kind="Microphone"
                                                Opacity=".56" />
                                        </Button>
                                    </Grid>

                                    <Label
                                        Grid.Column="1"
                                        Margin="20,10,10,10"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Content="tất cả chủ nhà"
                                        FontSize="20"
                                        Style="{StaticResource fontStyle}" />
                                </Grid>
                                <DataGrid
                                    Name="HouseOwnerListDataGrid"
                                    Height="500"
                                    Margin="5,20,5,20"
                                    VerticalAlignment="Center"
                                    Background="White"
                                    ItemsSource="{Binding HouseOwners}" />

                                <!--  TODO Binding tất cả chủ nhà  -->
                            </StackPanel>
                        </TabItem>

                        <!--  Thêm xóa sửa chủ nhà  -->
                        <TabItem Header="Thêm/ sửa/ xóa">
                            <StackPanel Background="AliceBlue">
                                <Grid Margin="10,10,20,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="7*" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Content="Chọn chủ nhà"
                                        FontSize="20"
                                        Style="{StaticResource fontStyle}" />
                                    <ComboBox
                                        Name="HouseOwnerListComboBox"
                                        Grid.Column="1"
                                        Height="40"
                                        Background="White">
                                        <!--<ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Name="bookComboBoxImage" Source="{Binding Image, Converter={StaticResource fileConverter}}" Margin="5, 0 , 5, 0" Width="20" Height="20" />
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="Red"/>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Year}"/>
                                                        <TextBlock Text=" - "/>
                                                        <TextBlock Text="{Binding AuthorName}" Foreground="Blue"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>-->
                                    </ComboBox>
                                </Grid>

                                <StackPanel Margin="10">
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="7*" />
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            Grid.Column="0"
                                            Margin="0,0,10,0"
                                            VerticalAlignment="Center"
                                            Content="Mã chủ nhà : "
                                            FontSize="15"
                                            Style="{StaticResource fontStyle}" />
                                        <!--  TODO binding mã  -->
                                        <Label
                                            Name="HouseOwnerCodeLable"
                                            Grid.Column="1"
                                            Content="ABCDWE"
                                            FontSize="20"
                                            Style="{StaticResource fontStyle}" />
                                    </Grid>
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="7*" />
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Content="Họ và tên"
                                            FontSize="15"
                                            Style="{StaticResource fontStyle}" />
                                        <TextBox
                                            x:Name="HouseOwnerNameTextBox"
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Họ và tên"
                                            Background="White"
                                            FontSize="15"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    </Grid>
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="7*" />
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Content="Số điện thoại"
                                            FontSize="15"
                                            Style="{StaticResource fontStyle}" />
                                        <TextBox
                                            x:Name="HouseOwnerPhoneNumberTextBox"
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Số điện thoại"
                                            Background="White"
                                            FontSize="15"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    </Grid>
                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="7*" />
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            Grid.Column="0"
                                            VerticalAlignment="Center"
                                            Content="Địa chỉ"
                                            FontSize="15"
                                            Style="{StaticResource fontStyle}" />
                                        <TextBox
                                            x:Name="HouseOwnerAdressTextBox"
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Địa chỉ"
                                            Background="White"
                                            FontSize="15"
                                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                    </Grid>
                                </StackPanel>
                                <Grid Margin="10,30,10,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        Grid.Column="0"
                                        Width="128"
                                        Command="{Binding RunDialogCommand}"
                                        Content="RUN CODE" />
                                    <!--<Button Name="HouseOwnerAddButon" Grid.Column="0" Content="Thêm" HorizontalAlignment="Center" Width="150"/>-->
                                    <Button
                                        Name="HouseOwnerUpdateButon"
                                        Grid.Column="1"
                                        Width="150"
                                        HorizontalAlignment="Center"
                                        Content="Sửa" />
                                    <Button
                                        Name="HouseOwnerDeteleButon"
                                        Grid.Column="2"
                                        Width="150"
                                        HorizontalAlignment="Center"
                                        Content="Xóa" />
                                </Grid>
                            </StackPanel>
                        </TabItem>

                    </TabControl>
                </Grid>
            </TabItem>

            <!--  Quản lý nhả TODO  -->
            <TabItem
                Name="House"
                VerticalAlignment="Bottom"
                Header="Nhà">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="482*" />
                        <ColumnDefinition Width="201*" />
                    </Grid.ColumnDefinitions>
                    <TabControl
                        Grid.ColumnSpan="2"
                        Width="{Binding ConverterParameter=0.5, Converter={converter:RatioConverter}, Source={x:Static SystemParameters.PrimaryScreenWidth}}"
                        Height="{Binding ConverterParameter=0.86, Converter={converter:RatioConverter}, Source={x:Static SystemParameters.PrimaryScreenHeight}}"
                        Margin="0,0,0,-8"
                        VerticalAlignment="Top"
                        Style="{StaticResource MaterialDesignTabControl}">
                        <!--  tất cả nhà : hiện tất cả nhà TODO  -->
                        <TabItem Header="Danh sách">
                            <StackPanel Background="AliceBlue">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="7*" />
                                        <ColumnDefinition Width="3*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid
                                        Grid.Column="0"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Background="White">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Button
                                            Name="HouseSearchButton"
                                            Click="HouseSearchButton_Click"
                                            Style="{DynamicResource MaterialDesignToolButton}">
                                            <materialDesign:PackIcon Kind="Search" Opacity=".56" />
                                        </Button>
                                        <TextBox
                                            x:Name="HouseSearchTextBox"
                                            Grid.Column="1"
                                            MinWidth="400"
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            materialDesign:HintAssist.Hint="Search here"
                                            materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                            BorderThickness="0"
                                            FontFamily="Segeo ui light"
                                            FontSize="15" />
                                        <Button Grid.Column="2" Style="{DynamicResource MaterialDesignToolButton}">
                                            <materialDesign:PackIcon
                                                Margin="8,0,0,0"
                                                Kind="Microphone"
                                                Opacity=".56" />
                                        </Button>
                                    </Grid>

                                    <!--<Label Content="Tất cả nhà"
                                       Style="{StaticResource fontStyle}"
                                       Grid.Column="1"
                                       FontSize="20"
                                       Margin="20,10,10,10"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Center"/>-->
                                    <ComboBox
                                        Grid.Column="1"
                                        Margin="10,5,10,5"
                                        materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}"
                                        Background="White"
                                        FontFamily="Segeo UI light"
                                        FontSize="15">
                                        <ComboBoxItem
                                            HorizontalAlignment="Center"
                                            Content="Tất cả nhà"
                                            IsSelected="True" />
                                        <ComboBoxItem HorizontalAlignment="Center" Content="Nhà đã Bán/Thuê" />
                                        <ComboBoxItem HorizontalAlignment="Center" Content="Nhà trống" />
                                        <ComboBoxItem HorizontalAlignment="Center" Content="Theo nhân viên " />
                                    </ComboBox>

                                </Grid>
                                <DataGrid
                                    Name="HouseListDataGrid"
                                    Height="500"
                                    Margin="5,20,5,20"
                                    VerticalAlignment="Center"
                                    Background="White"
                                    ItemsSource="{Binding Houses}" />
                                <!--  TODO Binding itemsource tất cả nhà là được  -->
                            </StackPanel>
                        </TabItem>

                        <!--  Thêm xóa sửa nhà  -->
                        <TabItem Header="Thêm/ sửa/ xóa">
                            <Grid Background="AliceBlue">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Margin="10,10,20,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*" />
                                        <ColumnDefinition Width="7*" />
                                    </Grid.ColumnDefinitions>
                                    <Label
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Content="Chọn nhà"
                                        FontSize="15"
                                        Style="{StaticResource fontStyle}" />
                                    <!--  Binding nhà đang có  -->
                                    <ComboBox
                                        Name="HouseListComboBox"
                                        Grid.Column="1"
                                        Height="40"
                                        Background="White">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding MANHA}" />
                                                    <TextBlock Text=" - " />
                                                    <TextBlock Text="{Binding DUONG}" />
                                                    <TextBlock Text=" - " />
                                                    <TextBlock Text="{Binding QUAN}" />
                                                    <TextBlock Text=" - " />
                                                    <TextBlock Text="{Binding KHUVUC}" />
                                                    <TextBlock Text=" - " />
                                                    <TextBlock Text="{Binding THANHPHO}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </Grid>

                                <ScrollViewer Grid.Row="1" Height="500">
                                    <StackPanel>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="7*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Content="Mã nhà"
                                                FontSize="15"
                                                Style="{StaticResource fontStyle}" />
                                            <!--  Binding mã nhà  -->
                                            <Label
                                                Name="HouseCodeLable"
                                                Grid.Column="1"
                                                Content="{Binding SelectedHouse.MANHA}"
                                                FontSize="20"
                                                Style="{StaticResource fontStyle}" />
                                        </Grid>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="7*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Content="số lượng xem"
                                                FontSize="15"
                                                Style="{StaticResource fontStyle}" />
                                            <!--  Binding số lượng xem  -->
                                            <Label
                                                Name="HouseViewLable"
                                                Grid.Column="1"
                                                Content="{Binding SelectedHouse.SOLUONGXEM}"
                                                FontSize="20"
                                                Style="{StaticResource fontStyle}" />

                                        </Grid>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="7*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Content="Chủ nhà"
                                                FontSize="15"
                                                Style="{StaticResource fontStyle}" />
                                            <!--  Binding các chủ nhà hiện có  -->
                                            <!--  binding selected value  -->
                                            <ComboBox
                                                Name="HouseOwnerNameComboBox"
                                                Grid.Column="1"
                                                materialDesign:HintAssist.Hint="chủ nhà"
                                                materialDesign:HintAssist.HintOpacity=".7"
                                                Background="White"
                                                FontFamily="Segeo ui light"
                                                FontSize="15"
                                                IsEditable="True"
                                                SelectedItem="{Binding SelectedHouse.CHUNHA}">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding MACNHA}" />
                                                            <TextBlock Text=" - " />
                                                            <TextBlock Text="{Binding TEN}" />
                                                            <TextBlock Text=" - " />
                                                            <TextBlock Text="{Binding SDT}" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </Grid>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="7*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Content="Tình trạng"
                                                FontSize="15"
                                                Style="{StaticResource fontStyle}" />
                                            <!--  TODO Binding tình trạng  -->
                                            <TextBox
                                                x:Name="HouseStateTextBox"
                                                Grid.Column="1"
                                                Margin="5"
                                                VerticalAlignment="Center"
                                                materialDesign:HintAssist.Hint="(0: Trống/ 1: hết trống)"
                                                Background="White"
                                                FontSize="15"
                                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                Text="{Binding SelectedHouse.TINHTRANG}" />
                                        </Grid>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="7*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Content="Ngày đăng"
                                                FontSize="15"
                                                Style="{StaticResource fontStyle}" />
                                            <StackPanel
                                                Grid.Column="1"
                                                Margin="0,5,0,5"
                                                Background="White">
                                                <!--  Binding ngày đăng  -->
                                                <DatePicker
                                                    Name="HousePostDatePicker"
                                                    VerticalAlignment="Center"
                                                    materialDesign:HintAssist.Hint="MM/dd/YYYY"
                                                    FontFamily="Segeo Ui light"
                                                    FontSize="15"
                                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                                    Text="{Binding SelectedHouse.NGAYDANG}" />

                                            </StackPanel>
                                        </Grid>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="7*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Content="Ngày hết hạn"
                                                FontSize="15"
                                                Style="{StaticResource fontStyle}" />
                                            <StackPanel
                                                Grid.Column="1"
                                                Margin="0,5,0,5"
                                                Background="White">
                                                <!--  Binding ngày hết hạn  -->
                                                <DatePicker
                                                    Name="HouseExpirationDatePicker"
                                                    VerticalAlignment="Center"
                                                    materialDesign:HintAssist.Hint="MM/dd/YYYY"
                                                    FontFamily="Segeo Ui light"
                                                    FontSize="15"
                                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                                    Text="{Binding SelectedHouse.NGAYHETHAN}" />

                                            </StackPanel>
                                        </Grid>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="7*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Content="Số lượng phòng ở"
                                                FontSize="15"
                                                Style="{StaticResource fontStyle}" />
                                            <!--  binding số lượng phòng ở  -->
                                            <TextBox
                                                x:Name="NumberOfRoomsTextBox"
                                                Grid.Column="1"
                                                Margin="5"
                                                VerticalAlignment="Center"
                                                materialDesign:HintAssist.Hint="số lượng"
                                                Background="White"
                                                FontSize="15"
                                                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                Text="{Binding SelectedHouse.SOLUONGPHONGO}" />
                                        </Grid>
                                        <StackPanel Margin="10">
                                            <Label
                                                VerticalAlignment="Center"
                                                Content="Định vị"
                                                FontSize="15"
                                                Style="{StaticResource fontStyle}" />
                                            <!--  binding địa chỉ các kiểu  -->
                                            <Grid Margin="5,0,5,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <TextBox
                                                    x:Name="HouseLocationStreetTextBox"
                                                    Grid.Column="0"
                                                    Margin="5"
                                                    VerticalAlignment="Center"
                                                    materialDesign:HintAssist.Hint="Đường"
                                                    Background="White"
                                                    FontSize="15"
                                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                    Text="{Binding SelectedHouse.DUONG}" />

                                                <TextBox
                                                    x:Name="HouseLocationDistrictTextBox"
                                                    Grid.Column="1"
                                                    Margin="5"
                                                    VerticalAlignment="Center"
                                                    materialDesign:HintAssist.Hint="Quận"
                                                    Background="White"
                                                    FontSize="15"
                                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                    Text="{Binding SelectedHouse.QUAN}" />
                                                <TextBox
                                                    x:Name="HouseLocationAreaTextBox"
                                                    Grid.Column="2"
                                                    Margin="5"
                                                    VerticalAlignment="Center"
                                                    materialDesign:HintAssist.Hint="Khu vực"
                                                    Background="White"
                                                    FontSize="15"
                                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                    Text="{Binding SelectedHouse.KHUVUC}" />

                                                <TextBox
                                                    x:Name="HouseLocationCityTextBox"
                                                    Grid.Column="3"
                                                    Margin="5"
                                                    VerticalAlignment="Center"
                                                    materialDesign:HintAssist.Hint="Thành phố"
                                                    Background="White"
                                                    FontSize="15"
                                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                                    Text="{Binding SelectedHouse.THANHPHO}" />

                                            </Grid>
                                        </StackPanel>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="7*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Content="Loại nhà"
                                                FontSize="15"
                                                Style="{StaticResource fontStyle}" />
                                            <!--  TODO Binding Loại nhà  -->
                                            <!--  Binding selected value  -->
                                            <ComboBox
                                                Name="HouseTypeCombox"
                                                Grid.Column="1"
                                                Height="40"
                                                Background="White"
                                                SelectedItem="{Binding SelectedHouse.LOAINHA}">
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Foreground="Blue" Text="{Binding MALOAI}" />
                                                            <TextBlock Text=" - " />
                                                            <TextBlock Text="{Binding TEN}" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>
                                        </Grid>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="7*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Content="Phân loại"
                                                FontSize="15"
                                                Style="{StaticResource fontStyle}" />

                                            <!--  Binding loại nhà thuê/hay bán  -->
                                            <Grid Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <RadioButton
                                                    x:Name="HouseForSaleRadioButotn"
                                                    Grid.Column="0"
                                                    Width="100"
                                                    HorizontalAlignment="Center"
                                                    Content="Nhà bán"
                                                    GroupName="HouseTypeRatioButton"
                                                    Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}" />
                                                <RadioButton
                                                    Grid.Column="1"
                                                    Width="100"
                                                    HorizontalAlignment="Center"
                                                    Content="Nhà thuê"
                                                    GroupName="HouseTypeRatioButton"
                                                    Style="{StaticResource MaterialDesignChoiceChipPrimaryOutlineRadioButton}" />
                                            </Grid>
                                        </Grid>
                                        <Grid Margin="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="7*" />
                                            </Grid.ColumnDefinitions>
                                            <Label
                                                Grid.Column="0"
                                                VerticalAlignment="Center"
                                                Content="Giá thuê/bán"
                                                FontSize="15"
                                                Style="{StaticResource fontStyle}" />
                                            <!--  Binding giá bán/thuê - này để riêng, ko trong class nhà, do chua wbik nó thêu hay bán  -->
                                            <TextBox
                                                Name="HousePriceTextBox"
