    <StackPanel Background="AliceBlue">
        
        <Label Content="Danh sách các nhân viên chưa đạt chỉ tiêu tháng" 
               Margin="20"
               FontSize="20"
               Style="{StaticResource fontStyle}"/>
        <Label
            Content="tháng 2"
            Style="{StaticResource fontStyle}"
            FontSize=" 15"/>
        <Label
            Content="Tổng số nhân viên : x"
            Style="{StaticResource fontStyle}"
