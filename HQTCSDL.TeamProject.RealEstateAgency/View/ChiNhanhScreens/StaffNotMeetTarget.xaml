<metro:MetroWindow
    x:Class="HQTCSDL.TeamProject.RealEstateAgency.View.ChiNhanhScreens.StaffNotMeetTarget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
